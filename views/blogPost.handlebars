<div class="card text-center">
  <div class="card-header">
    Posted by {{user.name}} on {{format_date dateCreated}}
  </div>
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{{get_emoji}}}</p>
    <p class="card-text">{{description}}</p>
  </div>
</div>

<div class="container mt-4 p-3">
  {{#each comments}}
    <div class="card mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <h5 class="card-subtitle mb-0 text-muted">
              <strong>{{user.name}}:</strong>
            </h5>
            <p class="card-text ml-2 mb-0">{{comment}}</p>
          </div>
          {{#if isOwnComment}}
            <button type="button" class="btn btn-danger btn-sm delete-btn" data-id={{id}}>
              <img src="/images/icons8-delete-50.png" alt="delete_icon" data-id={{id}} style="width: 20px; height: 20px;">
            </button>
          {{/if}}
        </div>
      </div>
    </div>
  {{/each}}
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col">
      {{#if logged_in}}
        <form id="comment-form" data-blogPostId="{{id}}">
          <div class="form-group">
            <label for="comment-textarea">Add a Comment:</label>
            <textarea class="form-control" id="comment-textarea" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit Comment</button>
        </form>
      {{else}}
        <div class="alert alert-warning" role="alert">
          You must be logged in to add a comment.
        </div>
      {{/if}}
    </div>
  </div>
</div>

<script src="/js/comment.js"></script>
<script src="/js/deleteComment.js"></script>