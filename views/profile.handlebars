<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

{{#if blogPosts.length}}
<div class="col-md-6 project-list">
  <h3>Your Posts:</h3>

  {{#each blogPosts as |blogPost|}}
  <div class="row mb-4 project">
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="card-title"><a href="/blogPost/{{blogPost.id}}" class="no-underline">{{blogPost.title}}</a></h5>
      </div>
      <div class="card-body">
        <p class="card-text">{{blogPost.description}}</p>
        <p class="card-text">
          <small class="text-muted">Created by {{blogPost.user.name}} on {{format_date blogPost.dateCreated}}</small>
        </p>
        <!-- Wrap buttons in a single div -->
        <div class="d-flex justify-content-start">
          <button class="delete-btn btn btn-sm btn-danger" style="margin-right: 10px;" data-id="{{blogPost.id}}">Delete</button>
          <button class="edit-btn btn btn-sm btn-danger" data-id="{{blogPost.id}}" data-title="{{blogPost.title}}" data-description="{{blogPost.description}}">Edit</button>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}

<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="edit-form">
          <input type="text" id="edit-title" class="form-control" placeholder="Title" />
          <textarea id="edit-content" class="form-control mt-2" placeholder="Content"></textarea>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="save-changes">Save changes</button>
      </div>
    </div>
  </div>
</div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPostModal">
  Add Post
</button>

<!-- Modal Structure for Bootstrap 5 -->
<div class="modal fade" id="addPostModal" tabindex="-1" aria-labelledby="addPostModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addPostModalLabel">Add Post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="new-project-form">
          <div class="mb-3">
            <label for="project-name" class="form-label">Title:</label>
            <input type="text" class="form-control" id="project-name" name="project-name">
          </div>
          <div class="mb-3">
            <label for="project-desc" class="form-label">Description:</label>
            <textarea class="form-control" id="project-desc" name="project-desc"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" id="create-post-btn" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>

<script src="./js/profile.js"></script>
<script src="./js/editButton.js"></script> 
<script src="./js/addPost.js"></script>